{{#extend "layouts/auth" title="Login Page" }}
{{#content "main"}}
<div class="p-1">
  <h3 class="fw-600 text-h4-sm">Sign In</h3>
  <form  action="auth/login" method="post" class="mt-3" is="ajax-form" id="auth-form">
    <!--  email field -->
    <div class="field">
      <label for="">Email</label>
      <custom-input type="email"  name="email"></custom-input>
    </div>
    <!-- password -->
    <div class="field">
      <label for="">Password</label>
      <custom-input type="password"  name="password"></custom-input>
    </div>

    <div class="field d-flex d-block-md justify-between">
      <div>
        <button class="btn btn-primary btn-block-md"  is="submit-button">
          Login
        </button>
      </div>

      <div class="mt-3">
        <a href="register.html" class="d-block">Register Instead</a>
      </div>

    </div>
  </form>
</div>

{{/content}}
{{/extend}}