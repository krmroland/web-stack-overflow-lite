{{#extend "layouts/auth" title="Stack overlfow light" }}
   {{#content "main"}}
   <div class="p-1">
      <h3 class="fw-600 text-h4-sm">Register</h3>
      <form  action="auth/signup" method="post" class="mt-3" is="ajax-form" id="auth-form"> 
        <!--  name field -->
           <div class="field">
              <label for="">Name</label>
             <custom-input  name="name"></custom-input>
           </div>
           <!--  email field -->
            <div class="field">
               <label for="">Email</label>
               <custom-input type="email"  name="email"></custom-input>
            </div>
          <!-- password -->
          <div class="field">
             <label for="">Password</label>
              <custom-input type="password"  name="password"></custom-input>
          </div>
        <!-- password  confirmation-->
          <div class="field">
             <label for="">Password Confirmation</label>
              <custom-input type="password"  name="password_confirmation"></custom-input>
          </div>
 
          <div class="field d-flex d-block-md justify-between">
              <div>
                  <button class="btn btn-primary btn-block-md" is="submit-button">
                      Register
                  </button>
              </div>
          </div>
      </form>
       <div class="mt-3">
           <a href="login.html" class="d-block">Sign In Instead</a>
       </div>
   </div>
       
   {{/content}}
{{/extend}}